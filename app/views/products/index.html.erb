<!-- add a the category loop -->
<!-- every product of a specific category will be showed with its own table and properties -->
<table class="table table-hover">
  <% @products.each do |product| %>
    <tr>
      <td class="col-sm-4 table-text">
      <%= image_tag product.picture, class: product.color, style: "height: 90px" %>
      </td>
      <td class="col-sm-2 table-text">
      <%= image_tag 'coin', class:'color' if not_sold(product) %>
      </td>
      <td class="col-sm-2 table-text">
      <%#= image_tag if not_used(product) %>
      </td>
      <td class="col-sm-2">
      <%#= not_sold %>
      </td>
    </tr> 
  <% end %>
</table>