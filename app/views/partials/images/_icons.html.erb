	<% if product == 1 %>
		<%= image_tag "shovel-2.svg", class: "roomsImages pull-left", style: "height:31px;" %>	
	<% elsif product == 3 %>
		<%= image_tag "bread.svg", class: "roomsImages pull-left", style: "height:31px;" %>			
	<% end %>
