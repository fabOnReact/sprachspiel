	<% elsif image == 1 && view == "show" %>
		<%= image_tag "muehle.svg", class: "roomsImages pull-left" %>	
	<% elsif image == 2 && view == "index" %>
		<%= image_tag "hammer.svg", class: "roomsIcons pull-right", id: "hammer" %>
	<% elsif image == 2 && view == "show" %>
		<%= image_tag "anvil.svg", class: "roomsImages pull-left", style: "margin-top: 25px;", id: "anvil" %>
	<% elsif image == 3 && view == "index" %>
		<%= image_tag "battle.svg", class: "roomsIcons pull-left" %>
	<% elsif image == 3 && view == "show" %>
		<%= image_tag "armor.svg", class: "roomsImages pull-left" %>	
	<% elsif image == 4 && view == "index" %>
