<%#= render partial: "shared/product_description", collection:
@products %>

<%#= render partial: "shared/resources" if user_signed_in? %> 
<%#= render 'shared/error_messages', object: @purchase %>
<ul class='alert fade out' id='errors'></ul>

<div class="row main">
  <div class="col-xs-12 col-sm-8">
    <%= render @products %>
  </div>
  <% unless android_request %>
  <div class="col-sm-4 hidden-xs">
    <%= render partial: "shared/chatroom", locals: {chatroom: @chatroom, messages: @messages} %>
    <%= render partial: "actions", locals: {} %>    
  </div><% end %>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-8 purchase">
    <div class="price">
      <%= image_tag "coins", class:"icon coins" %>
      <p id="price-amount">0</p>  
    </div>
    <%#= link_to "Inventory", products_path, class:"btn btn-green" if user_signed_in? %>
    <% if user_signed_in? %><a href="#" class="btn btn-green" data-name="show-actions">Inventory</a><% end %>
    <%#= link_to "join chat", chatroom_path(@chatroom), class: "price" %>
    <div class="btn btn-primary" id="submit">Purchase</div>
  </div>      
  <div class="col-sm-4 hidden-xs">
    <%= render partial: 'shared/message_form', locals: {message: @message, chatroom: @chatroom} %>
  </div>
</div>