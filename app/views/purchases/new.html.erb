<%#= render partial: "shared/product_description", collection:
@products %>
<%= render partial: "shared/resources" if user_signed_in? %> 

<ul class='alert fade out hidden' id='errors'></ul>

<div class="row purchase">
  <div class="col-xs-12 col-sm-8 no-padding">
    <div>
      <%= render @products %>
    </div>
  </div>
  <div class="col-sm-4 hidden-xs chatroom">
    <%= render partial: "shared/chatroom", locals: {chatroom: @chatroom, messages: @messages} %>
  </div>
  <div class="col-xs-12 prices mtb-small">
    <div class="col-xs-12 col-sm-8">
      <% if user_signed_in? %>
      <%= link_to "Inventory", events_path, class: "col-xs-12 btn btn-green btn-round btn-f-large", data: {name:"show-actions"} %>
      <% end %>    
      <div class="btn hidden-xs btn-azure btn-round btn-f-small">
        <%= image_tag "coins.svg", class:"icon-s1 hidden-xs" %>
        <span class="price-amount" data-id="price-amount">0</span>
      </div>
      <%#= link_to "join chat", chatroom_path(@chatroom), class: "price" %>
      <a href="" class="col-xs-12 btn btn-orange btn-round btn-f-large" id="submit"><span class="visible-xs price-amount" data-id="price-amount">0</span>Purchase</a>
    </div>      
    <div class="col-sm-4 hidden-xs">
      <%= render partial: 'shared/message_form', locals: {message: @message, chatroom: @chatroom} %>
    </div>  
  </div>
</div>
