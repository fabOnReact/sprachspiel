<div class="chatroom panel panel-default scroll-bar col-sm-12 col-xs-12">
  <% if @chatroom.messages.any? %>
    <div class="panel-body" id="messages">
      <%= render partial: 'messages/message' %> <!--collection: @chatroom.messages-->
    </div>
  <% else %>
    <div class="panel-body hidden" id="messages">
    </div>
  <% end %>
</div>
  <% if user_signed_in? %>
    <%= render partial: 'messages/message_form', locals: {message: @message, variable: @chatroom } %>
    <% if @building.present? %>
      <%= link_to :back, building_path(@building), class: "btn btn-primary btn-lg full-width" %>
    <% else %>
      <%= link_to :back, room_path(@room), class: "btn btn-primary btn-lg full-width" %>      
    <% end %>
  </div>
  <% end %>
</div> 
