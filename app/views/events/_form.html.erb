<%= form_for @event, html: {class:"form-horizontal"} do |f| %>
  <%= render 'shared/error_messages', object: @event %>
  <div class="form-group">
    <%= f.label :name, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
      <%= f.hidden_field :type%>      
    </div>
  </div>
  <div class="form-group">
  <%= f.label :description, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>  
  </div>
  <div class="form-group">
    <%= f.label "select multiple members", class:"col-sm-2" %>
    <div class="col-sm-10">
      <%= f.select :user_ids, User.all.collect {|u| [u.username, u.id]}, {}, {:multiple => true,class:'form-control' } %>
    </div>  
  </div>    
  <div class="col-sm-offset-2 links"> 
    <%= link_to :back, url_for(:back), class: "btn btn-orange" %>
    <%= f.submit 'Save Alliance', class: 'btn btn-azure' %>
  </div>
<% end %>