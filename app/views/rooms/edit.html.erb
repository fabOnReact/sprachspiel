<%= simple_form_for [@building, @room], html: {class: 'form-horizontal'} do |f| %>
	<% if @room.errors['base'].present? %>
	<span class="help-block error"><%= @room.errors['base'][0] %></span>
	<% end %>            
	<%= render 'partials/error_messages', object: @room %> 
	<%= f.input :title %>
	<span class="countdown"></span>	
	<%= f.input :description, :input_html => { :cols => 100, :rows => 20 } %>
	<%= f.association :building %>
	<%= link_to :back, buildings_path, class: "btn btn-primary" %>
	<%= f.button :submit, class: "btn btn-primary" %>
<% end %>