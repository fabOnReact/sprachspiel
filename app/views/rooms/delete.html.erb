<% header("rooms","Delete Room") %>
<%= render "partials/alert", text: @room.title %>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
               <h2><%= yield(:rooms) %></h2>
            </header>
            <div class="panel-body">
            <%= link_to "Delete", {:action => "destroy", :building_id => @building.id, :id => @room.id }, :method => :delete, :class => "btn btn-danger wideButton btn-fill btn-main" %>
            <%= link_to "Cancel", buildings_path, :class => "btn btn-primary wideButton btn-fill btn-main" %>
            </div>
        </section>   
    </div>
</div>