<% @buildings.each do |building| %>

<% if building.id.odd? %>	
<div class="row">
	<div class="col-sm-3">
		<%= image_tag @images[building.id.pred], class: "roomsImages pull-left" %>
	</div>
	<div class="col-sm-3">
		<p><%= building.name %></p> 
		<p>Rooms Available:</p>
		<% rooms = @rooms.where(building_id: building.id) %>
		<% rooms.each do |room| %>
			<%= link_to room.title, room_path(room) %>
		<% end %>
		<%= link_to "Create a room", new_room_path %>
	</div>

<% if building == @buildings.last %>
</div>
<% end %>

<% else %>	
	<div class="col-sm-3">
		<p><%= building.name %></p> 
		<p>Rooms Available:</p>
		<% rooms = @rooms.where(building_id: building.id) %>
		<% rooms.each do |room| %>
			<%= link_to room.title, room_path(room) %>
		<% end %>
		<%= link_to "New #{building.name}", new_room_path %>		
	</div>
	<div class="col-sm-3">
		<%= image_tag @images[building.id.pred], class: "roomsImages pull-right" %>
	</div>
</div>
<% end %>

<% end %>
