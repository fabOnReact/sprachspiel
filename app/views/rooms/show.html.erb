<%= render partial: "shared/resources" if user_signed_in? %>
  <h2><%= @room.title %><span class="hidden-xs"> room from <%= @room.user.name %></span></h2>
  <p class="hidden-xs"><%= @room.description %></p>
<% if user_signed_in? && current_user.room_owner(@room) || @items_number.present? || @items_count.present? %>
  <%= render template: "prices/new" %>
  <%= render template: "purchases/index" %>
<% end %>
	<div class="room panel panel-default scroll-bar chatroom" id='chatroom_id' data-chat-room-id="<%= @room.chatroom.id %>">
		<% if @room.chatroom.messages.any? %>
			<div class="panel-body" id="messages">
				<%= render partial: 'messages/message' %>
			</div>
		<% else %>	
			<div class="panel-body hidden" id="messages"></div>
		<% end %>
	</div>
	<% if user_signed_in? %>
		<%= render partial: 'messages/message_form', locals: {message: @message, variable: @room} %>
	<% else %>
		<% flash[:error] = "You need to signup/signin to chat and play" %>
	<% end %>

<div class="margin-top hidden-xs">
  <%= link_to :back, building_path(@room.building_id), class: "btn btn-primary btn-lg" %>
  <%= render partial:"buildings/shared/mobile_buttons", locals: {controller: "rooms"} %>  
</div>

<%= link_to "Join Chatroom", room_chatroom_path(@room, @room.chatroom), class: "btn btn-primary btn-block" %>