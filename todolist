	balance calcolato con uno script Stock.where(user_id: current_user.id).sum(:quantity)		

	material
		name
		has_many :resources

	stock
		user_id:integer
		material_id:integer
		quantity:integer
		purchase_id:integer
		sale_id:integer
	
	inventory is Item.where(user_id: current_user.id, sold:false, used:false)

	item
		user_id:integer
		product_id:integer
		sold:boolean
		used:boolean

	formula write some code to require certain resources and products to build other products

	product
		name:string sickle, four ...
		has_many :item

	purchase
		user_id:integer
		item_id:integer
		has_one :transaction
		has_one :stock

	transaction 
		purchase_id
		sale_id

	sale
		user_id:integer
		item_id:integer
		has_one :transaction
		has_one :stock


