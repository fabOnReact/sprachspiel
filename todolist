	item
		user_id:integer
		product_id:integer
		sold:boolean
		used:boolean
		purchase_id:integer
		#sale_id:integer

	formula write some code to require certain resources and products to build other products

	product
		name:string sickle, four ...
		has_many :item

	purchase
		user_id:integer
		item_id:integer
		has_one :invoice
		#has_one :stock
		has_many :items

	invoice 
		purchase_id
		sale_id
		price_id:integer

	sale
		user_id:integer
		item_id:integer
		has_one :invoice
		#has_one :stock

