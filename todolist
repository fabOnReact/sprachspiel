---------------- Models -------------------------------------------

room 
	building_id:integer
	user_id:integer

	belongs_to :user
	belongs_to :building
	has_one :chatroom

building
	name price_id:integer

	has_many :rooms

price
	gold wood food stone metal

	has_many :buildings

chatroom 
	room_id:integer

	has_many :messages
	has_many :users, through: :messages
	
message
	user_id:integer
	chatroom_id:integer

	belongs_to :user
	belongs_to :chatroom

